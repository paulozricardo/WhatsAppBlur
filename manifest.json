{
  "manifest_version": 3,
  "name": "WhatsAppBlur",
  "version": "2.0",
  "description": "Aplica blur nas conversas do WhatsApp Web para privacidade",
  "permissions": ["storage"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ]
}
